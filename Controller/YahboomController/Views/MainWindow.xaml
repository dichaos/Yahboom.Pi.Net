<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:YahboomController.ViewModels;assembly=YahboomController"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:YahboomController.Views"
        mc:Ignorable="d" d:DesignWidth="1280" d:DesignHeight="800"
        x:Class="YahboomController.Views.MainWindow"
        Background="{DynamicResource ThemeBackgroundColor}"
        Icon="/Assets/G1.jpg"
        Title="YahboomController">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400" />
            <ColumnDefinition Width="950" />
            <ColumnDefinition Width="400" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="145" />
            <RowDefinition Height="410" />
            <RowDefinition Height="410" />
        </Grid.RowDefinitions>
        
        <views:ConnectionSettingsView Grid.Row="0" Grid.Column="0" Width="400" Height="145" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <views:Movement Grid.Row="1" Grid.Column="0" Width="400" Height="410" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <views:LED Grid.Row="2" Grid.Column="0" Width="400" Height="410"  VerticalAlignment="Top" HorizontalAlignment="Left"/>
        
        <views:Camera Grid.Row="0" Grid.Column="1" Grid.RowSpan="3" Width="950" Height="740" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        
        <views:Ultrasonic Grid.Row="0" Grid.Column="2" Width="400" Height="200"/>
        <views:Tracker Grid.Row="1" Grid.Column="2" Width="400" Height="120"/>
    </Grid>
</Window>
