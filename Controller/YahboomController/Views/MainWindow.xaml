<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:YahboomController.ViewModels;assembly=YahboomController"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:YahboomController.Views"
        mc:Ignorable="d" d:DesignWidth="1280" d:DesignHeight="800"
        x:Class="YahboomController.Views.MainWindow"
        Icon="/Assets/G1.jpg"
        Title="YahboomController">

    <StackPanel>
        <Grid >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            
            <views:ConnectionSettingsView Grid.Row="0" Grid.Column="0" Width="400" Height="25" />
            <views:Movement Grid.Row="1" Grid.Column="0" Width="400" Height="410" />
        </Grid>
        
    </StackPanel>

</Window>
